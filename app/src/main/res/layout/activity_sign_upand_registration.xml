<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signUpandRegistration">




    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background_colour_gradient"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:background="#00000000"

        android:layout_marginTop="160dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.521">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="#00000000"
            android:src="@drawable/whtie_logo_tinder"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.275"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView3"
            app:layout_constraintVertical_bias="0.211" />


        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:layout_gravity="left"
            android:background="#00000000"
            android:foregroundGravity="center"
            android:src="@drawable/text_tinder"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/imageView2"
            app:layout_constraintVertical_bias="1.0" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="334dp"
        android:layout_height="63dp"
        android:background="#00000000"
        android:gravity="center"
        android:layout_marginTop="60dp"
        android:text="By clicking Log In. you agree with our term.Lear how we process your data in our Privacy Policy and Cookies Policy."
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout2"
        app:layout_constraintStart_toStartOf="@+id/linearLayout2"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:background="#00000000"
        android:orientation="vertical"
        android:padding="1dp"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <LinearLayout
            android:id="@+id/log_in"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/button_background_circular"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:padding="13dp"
                android:src="@drawable/search" />

            <TextView
                android:id="@+id/sign_up_google"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:gravity="center"
                android:text=" Sign up with Google"
                android:textSize="15dp" />
        </LinearLayout>

        <Space
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/button_background_circular"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:padding="12dp"
                android:src="@drawable/facebook" />

            <TextView
                android:id="@+id/sign_up_faceboook"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:gravity="center"
                android:text="     Sign up with facebook"
                android:textSize="15dp" />
        </LinearLayout>

        <Space
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/button_background_circular"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:padding="11.4dp"
                android:src="@drawable/twitter" />

            <TextView
                android:id="@+id/sign_up_twitter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"
                android:gravity="center"
                android:text="Sign up with twitter"
                android:textSize="15dp" />
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/new_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:background="#00000000"
        android:text="New User ? "
        android:textColor="@color/white"

        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.148" />

    <TextView
        android:id="@+id/Click_here"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:text=" Click here"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/new_user"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/new_user"
        app:layout_constraintTop_toTopOf="@+id/new_user"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>